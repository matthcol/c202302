APP = geoportable
OBJS = main.o
INCLUDEDIR=$(INSTALLDIR)/include
LIBDIR=$(INSTALLDIR)/lib
LIBSTATIC=$(LIBDIR)/libgeo.a 
CFLAGS += -g1 -O0 -std=c99
LDFLAGS += -lm
CC = gcc

all: $(APP)

$(APP): $(OBJS)
	$(CC) -o $@ $^ $(LIBSTATIC) $(LDFLAGS)

%.o: %.c
	$(CC) -c $(CFLAGS) -I $(INCLUDEDIR) -o $@ $<

clean:
	rm -f $(APP) $(OBJS)

version:
	$(CC) --version
